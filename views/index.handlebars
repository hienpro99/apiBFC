<!-- views/index.handlebars -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dữ liệu từ MongoDB</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        <h1 class="mb-4">Dữ Liệu Khách Hàng Có Nhu Cầu Vay</h1>
        <table class="table">
            <thead>
                <tr>
                     <th>STT</th>
                    <th>Gói vay</th>
                    <th>Số điện thoại</th>
                    <th>Tài sản cầm cố</th>
                    <th>Thời gian</th>
                </tr>
            </thead>
            <tbody>
                {{#each data}}
                <tr>
                    <td>{{@index}}</td>
                    <td>{{this.selectedPackage}}</td>
                    <td>{{this.phoneNumber}}</td>
                    <td>{{this.selectedAssets}}</td>
                    <td>{{this.createdAt}}</td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</body>
</html>
